# Variables de Entorno para Red Blockchain FCI-Sunwest
# Copia este archivo a .env y ajusta los valores

# ============================================
# CONFIGURACIÓN DE RED
# ============================================
CHAIN_ID=12345
NETWORK_NAME="FCI-Sunwest Private Network"

# ============================================
# PUERTOS DE NODOS (P2P)
# ============================================
BOOTNODE_P2P_PORT=30303
FCI_VAL1_P2P_PORT=30304
FCI_VAL2_P2P_PORT=30305
FCI_RPC1_P2P_PORT=30306
FCI_RPC2_P2P_PORT=30307
SUNWEST_VAL1_P2P_PORT=30308
SUNWEST_VAL2_P2P_PORT=30309
SUNWEST_RPC_P2P_PORT=30310

# ============================================
# PUERTOS RPC HTTP
# ============================================
FCI_VAL1_RPC_PORT=8545
FCI_RPC1_RPC_PORT=8547
FCI_RPC2_RPC_PORT=8549
SUNWEST_RPC_PORT=8551

# ============================================
# PUERTOS WEBSOCKET
# ============================================
FCI_VAL1_WS_PORT=8546
FCI_RPC1_WS_PORT=8548
FCI_RPC2_WS_PORT=8550
SUNWEST_RPC_WS_PORT=8552

# ============================================
# PUERTOS DE MÉTRICAS (PROMETHEUS)
# ============================================
BOOTNODE_METRICS_PORT=9545
FCI_VAL1_METRICS_PORT=9546
FCI_VAL2_METRICS_PORT=9547
FCI_RPC1_METRICS_PORT=9548
FCI_RPC2_METRICS_PORT=9549
SUNWEST_VAL1_METRICS_PORT=9550
SUNWEST_VAL2_METRICS_PORT=9551
SUNWEST_RPC_METRICS_PORT=9552

# ============================================
# CUENTAS Y WALLETS (ACTUALIZAR DESPUÉS DE GENERAR KEYS)
# ============================================
# Direcciones de los validadores (sin 0x)
FCI_VAL1_ADDRESS=
FCI_VAL2_ADDRESS=
SUNWEST_VAL1_ADDRESS=
SUNWEST_VAL2_ADDRESS=

# Cuentas operativas (para deployar contratos)
FCI_DEPLOYER_ADDRESS=
FCI_DEPLOYER_PRIVATE_KEY=

SUNWEST_DEPLOYER_ADDRESS=
SUNWEST_DEPLOYER_PRIVATE_KEY=

# ============================================
# CONFIGURACIÓN DE CONTRATOS
# ============================================
# Direcciones de contratos desplegados (actualizar después del deploy)
LOANNFT_CONTRACT_ADDRESS=
USFCI_CONTRACT_ADDRESS=

# ============================================
# CONFIGURACIÓN DE TESSERA (PRIVACIDAD)
# ============================================
TESSERA_ENABLED=false
FCI_TESSERA_PORT=9000
SUNWEST_TESSERA_PORT=9001

# URLs de Tessera
FCI_TESSERA_URL=http://localhost:9000
SUNWEST_TESSERA_URL=http://localhost:9001

# ============================================
# CONFIGURACIÓN DE BRIDGE AVALANCHE
# ============================================
AVALANCHE_BRIDGE_ENABLED=false
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_CHAIN_ID=43114

# ============================================
# MONITOREO Y LOGGING
# ============================================
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================
# Permitir CORS (en producción, especifica dominios específicos)
CORS_ORIGINS=["*"]

# Host allowlist (en producción, especifica IPs específicas)
HOST_ALLOWLIST=["*"]

# Permissioning
PERMISSIONING_ENABLED=false
PERMISSIONING_CONFIG_FILE=permissions_config.toml

# ============================================
# CONFIGURACIÓN DE GAS
# ============================================
MIN_GAS_PRICE=0
DEFAULT_GAS_LIMIT=10000000

# ============================================
# BACKUP Y RECOVERY
# ============================================
BACKUP_ENABLED=false
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30